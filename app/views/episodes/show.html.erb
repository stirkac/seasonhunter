<div class="row">
<div class="col-md-6 pull-right">

  <h1> Comments: </h1>
  <% comments.each do |comment| %>
  <div class="media">
    <a class="pull-left">
      <%= image_tag(comment.user.image_url, width: 30)%>
    </a>
    <div class="media-body">
      <div class="media-heading">
        <%= comment.user.name %>
        <small class="pull-right"><i>posted <%= time_ago_in_words comment.created_at %> ago<i></small>
      </div>
      <div class="well well-sm col-md-12">
      <%= simple_format(comment.message) %>
      </div>
    </div>
  </div>
  <% end %>

  <% if current_user%>
    <%= form_for(Comment.new, url: series_episode_comment_path) do |f|%>

      <div class="form-group">
        <h3>Add a comment</h3>
      </div>
      <div class="form-group">
        <%= f.text_area :message, class: "form-control" %>
      </div>
      <div class="form-group">
      <%= f.submit class: "btn btn-danger pull-right" %>
      </div>
    <% end %>
  <%end%>
</div>
</div>
